/*
 * Used to route URLs and to build a sitemap, this file is used as data
 * for X-macros.
 */

HTML("about-json-api", about_json_api)
HTML("status", status)
HTML("about", about)
JSON("about", about)
TXT("robots", robots)
XML("sitemap", sitemap)

DIR("search")
	HTML("players", search)
	HTML("clans",   search)
	HTML("servers", search)
END()
HTML("search", search)

DIR("player")
	DIR("*")
		SVG("historic", graph)
	END()
	HTML("*", player)
END()

DIR("clan")
	HTML("*", clan)
END()

DIR("server")
	HTML("*", server)
END()

DIR("pages")
	HTML("*", teerank2_player_list)
END()

#define LIST(name)                                                      \
DIR(#name "s")                                                          \
	DIR("*")                                                        \
		HTML("*", list)                                         \
		JSON("*", name##_list)                                  \
	END()                                                           \
	JSON("*", name)                                                 \
	HTML("*", list)                                                 \
END()                                                                   \
HTML(#name "s", list)                                                   \
JSON(#name "s", name##_list)

LIST(player)
LIST(clan)
LIST(server)

DIR("players")
	DIR("*")
		SVG("elo rank", teerank3_graph)
	END()
END()

/* Root */
HTML("", list)

#undef DIR
#undef END
#undef HTML
#undef JSON
#undef TXT
#undef XML
#undef SVG
