/*
 * Used to route URLs and to build a sitemap, this file is used as data
 * for X-macros.
 */

HTML("about-json-api", about_json_api)
HTML("status", status)
HTML("about", about)
JSON("about", about)
TXT("robots", robots)
XML("sitemap", sitemap)

DIR("search")
	HTML("players", search)
	HTML("clans",   search)
	HTML("servers", search)
	HTML(NULL, search)
END()

DIR("player")
	DIR(_)
		SVG("historic", graph)
		JSON(NULL, player)
		HTML(NULL, player)
	END()
END()

DIR("clan")
	JSON(_, clan)
	HTML(_, clan)
END()

DIR("server")
	JSON(_, server)
	HTML(_, server)
END()

DIR("pages")
	HTML(_, teerank2_player_list)
END()

#define LIST(name)                                                      \
DIR(name)                                                               \
	JSON(NULL, list)                                                \
	HTML(NULL, list)                                                \
	DIR(_)                                                          \
		JSON(NULL, list)                                        \
		HTML(NULL, list)                                        \
		JSON(_, list)                                           \
		HTML(_, list)                                           \
	END()                                                           \
END()

LIST("players")
LIST("clans")
LIST("servers")

DIR("players")
	DIR(_)
		SVG("elo rank", teerank3_graph)
	END()
END()

/* Root */
HTML(NULL, list)

#undef DIR
#undef END
#undef HTML
#undef JSON
#undef TXT
#undef XML
#undef SVG
